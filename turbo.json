{
  "$schema": "https://turbo.build/schema.json",

  "pipeline": {
    "build": {
      "cache": false
    },

    "lint": {},
    "get-data": {
      "cache": false,
      "outputMode": "full",
      "inputs": ["src/**"]
    },
    "normalize-data": {
      "cache": false
    },
    "parse-data": {
      "cache": false,
      "dependsOn": ["normalize-data"]
    },
    "copy-package": {
      "inputs": ["./utils/copyPackage.ts"],
      "cache": false
    },
    "dev": { "cache": false },
    "test": { "cache": false }
  }
}
